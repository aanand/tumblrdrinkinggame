!!!

%html
  %head
    %title Tumblr Drinking Game
    %meta{ :name => "viewport", :content => "width = device-width" }
    %link{ :rel => 'stylesheet', :href => 'stylesheet.css' }
    %script{ :type => 'text/javascript', :src => 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js' }
    %script{ :type => 'text/javascript', :src => 'application.js' }

  %body
    #container
      #game
        %h1 Tumblr Drinking Game

        #message Type a noun and press Enter.

        %form
          %label
            ~ "fuckyeah"
            %input#noun{ :type => 'text', :value => 'bats' }>
            ~ ".tumblr.com"

          %button{ :type => 'submit' } Check

        #history{ :style => 'display: none' }
          %h2 Turn history

          %ul

        #new-game{ :style => 'display: none' }
          %h2
            New game:
            %a#must-exist{ :href => '#' } optimistic
            %a#must-not-exist{ :href => '#' } pessimistic

      #credits
        Made by
        %a{ :href => 'http://aanandprasad.com' } Aanand Prasad

    %script{ :type => 'text/javascript' }
      :plain
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-16551991-1']);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

